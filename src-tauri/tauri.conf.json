{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "shaza-food",
  "version": "0.1.0",
  "identifier": "com.shaza-new.pos-system",

  "build": {
    "beforeDevCommand": {
      "script": "npm run start",
      "cwd": "../frontend/src"
    },
    "beforeBuildCommand": {
      "script": "npm run build",
      "cwd": "../frontend/src"
    },
    "devUrl": "http://localhost:3000",
    "frontendDist": "../frontend/build"
  },

  "app": {
    "windows": [
      {
        "title": "pos-system",
        "width": 1280,
        "height": 800,
        "resizable": true
      }
    ]
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
